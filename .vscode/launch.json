{
    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "console": "integratedTerminal",
            "comment1": {"console": "internalConsole"},
            "stopOnEntry": true,
            "justMyCode": true,
            "comment2": {"justMyCode": false},
            "preLaunchTask": "Clear terminal"
        },
        {
            "name": "Python: uvicorn",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            "module": "uvicorn",
            "args":["server:app", "--reload"],
            "console": "integratedTerminal",
            "comment1": {"console": "internalConsole"},
            "stopOnEntry": false,
            "justMyCode": true,
            "comment2": {"justMyCode": false},
            "preLaunchTask": "Clear terminal"
        }
    ]
}